<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_ios_bg"
    >

  <LinearLayout
      android:id="@+id/dialog_base_bottom"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_alignParentBottom="true"
      >
    <TextView
        android:id="@+id/dialog_verify_ok"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="æ˜¯"
        android:textColor="#0076FF"
        android:textSize="17dp"
        />
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_above="@id/dialog_base_bottom"
      android:background="#3e4d4d4d"
      />

  <TextView
      android:id="@+id/dialog_verify_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/dialog_base_bottom"
      android:layout_marginBottom="1dp"
      android:gravity="center"
      android:minHeight="100dp"
      android:padding="20dp"
      android:text=""
      android:textColor="#030303"
      android:textSize="17dp"
      />
</RelativeLayout>